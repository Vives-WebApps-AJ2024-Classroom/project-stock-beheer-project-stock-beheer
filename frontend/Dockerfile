FROM node:latest AS builder

WORKDIR /app

COPY package*.json ./

RUN npm install

ARG BACKEND_URL
ARG GITHUB_CLIENT_ID
ARG ADMIN_LOGIN
ARG GITHUB_REDIRECT_URL
ENV REACT_APP_BACKEND_URL=$BACKEND_URL
ENV REACT_APP_GITHUB_CLIENT_ID=$GITHUB_CLIENT_ID
ENV REACT_APP_ADMIN_LOGIN=$ADMIN_LOGIN
ENV REACT_APP_GITHUB_REDIRECT_URL=$GITHUB_REDIRECT_URL

COPY . .

EXPOSE 3000

CMD ["npm", "start"]